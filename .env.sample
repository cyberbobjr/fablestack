# LLM Configuration
# API Key for DeepSeek (Required)
DEEPSEEK_API_KEY=your_api_key_here

# Image Generation Configuration
# API Key for Runware (Required for image generation)
RUNWARE_API_KEY=your_runware_key_here

# Model to use (Optional, defaults to deepseek-chat)
# DEEPSEEK_API_MODEL=deepseek-chat

# API Endpoint (Optional, defaults to https://api.deepseek.com)
# DEEPSEEK_API_BASE_URL=https://api.deepseek.com

# Token limit per request/context (Optional, defaults to 40000)
# LLM_TOKEN_LIMIT=40000

# Number of messages to keep in history (Optional, defaults to 10)
# LLM_KEEP_LAST_N_MESSAGES=10

# Data Configuration
# Directory for storing game data (Optional, defaults to ./gamedata)
# JDR_DATA_DIR=gamedata

# SMTP Configuration
# Set to 'true' to enable email features
# SMTP_ENABLED=true
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
